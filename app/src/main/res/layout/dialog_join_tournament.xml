<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="#2C2C2C"
    android:layout_marginTop="200dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Join Tournament"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"/>

    <EditText
        android:id="@+id/etGameName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Game Name"
        android:textColorHint="#A0A0A0"
        android:textColor="#FFFFFF"
        android:backgroundTint="#34C759"/>

    <EditText
        android:id="@+id/etGameUID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Game UID"
        android:textColorHint="#A0A0A0"
        android:textColor="#FFFFFF"
        android:backgroundTint="#34C759"
        android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/btnConfirmJoin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Confirm Join"
        android:layout_marginTop="20dp"
        android:backgroundTint="#34C759"/>
</LinearLayout>